<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.demo.mayixuan.myapplication.LoginActivity"
    android:background="#00033a"
    android:orientation="vertical">


    <LinearLayout
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center">
        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="#000000"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/set_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/set_up_button"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#33ABE3"
                    android:textSize="15dp"
                    android:text="设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>



            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:textColor="#8CCFF5"
                android:textSize="20sp"
                android:text="移动端统一身份认证平台"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/exit_shape"
                android:text="退出"
                android:textColor="#59A0F7"
                android:textSize="@dimen/login_exit"
                android:layout_weight="1"
                android:layout_marginRight="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:padding="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <LinearLayout
                    android:layout_weight="34"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_weight="118"
                        android:id="@+id/main_my_daiban_work"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:paddingBottom="5dp">
                        <LinearLayout
                            android:background="@drawable/main_button_shape1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:showDividers="middle"
                            android:divider="@android:drawable/divider_horizontal_textfield"
                            android:padding="20dp">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:paddingBottom="10dp">
                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/my_daiban_work" />
                                <TextView
                                    android:layout_weight="3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="我的代办"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/main_title"
                                    android:padding="5dp"
                                    android:gravity="center"/>
                                <LinearLayout
                                    android:layout_weight="3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5"
                                        android:textColor="#FAFF00"
                                        android:textSize="@dimen/main_title"
                                        android:padding="5dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="项"
                                        android:textColor="#ffffff"
                                        android:textSize="@dimen/main_title"
                                        android:padding="5dp"/>

                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:paddingTop="10dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center">
                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center">
                                        <Button
                                            android:layout_width="@dimen/main_cicle"
                                            android:layout_height="@dimen/main_cicle"
                                            android:background="@drawable/piont_one"/>

                                    </LinearLayout>
                                    <TextView
                                        android:layout_weight="4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="超时办理"
                                        android:textColor="#8CCFF5"
                                        android:textSize="@dimen/main_tip"
                                        android:padding="5dp"
                                        android:layout_marginLeft="5dp"/>
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:textSize="@dimen/main_tip"
                                        android:textColor="#ffffff"
                                        android:layout_marginLeft="5dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center">
                                        <Button
                                            android:layout_width="@dimen/main_cicle"
                                            android:layout_height="@dimen/main_cicle"
                                            android:background="@drawable/piont_two"/>

                                    </LinearLayout>
                                    <TextView
                                        android:layout_weight="4"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="今日新增"
                                        android:textColor="#8CCFF5"
                                        android:textSize="@dimen/main_tip"
                                        android:padding="5dp"
                                        android:layout_marginLeft="5dp"/>
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:textSize="@dimen/main_tip"
                                        android:textColor="#ffffff"
                                        android:layout_marginLeft="5dp"/>


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="82"
                        android:id="@+id/main_my_already_work"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">
                        <LinearLayout
                            android:gravity="center"
                            android:background="@drawable/main_button_shape2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="20dp">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/my_already_work" />
                            <TextView
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="已办工作"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/main_title"
                                android:padding="5dp" />
                            <LinearLayout
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="right">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="38"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/main_title"
                                    android:padding="5dp"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="项"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/main_title"
                                    android:padding="5dp"
                                    android:gravity="center"/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="20"
                    android:id="@+id/main_my_apply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/main_button_shape3"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:divider="@android:drawable/divider_horizontal_textfield"
                    android:padding="20dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            >
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_width="0dp"

                                app:srcCompat="@drawable/my_apply" />
                            <TextView
                                android:gravity="center"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="我的申请"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/main_title"
                                android:padding="5dp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="4"
                                android:textColor="#FAFF00"
                                android:textSize="@dimen/main_title"
                                android:padding="5dp"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="项"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/main_title"
                                android:padding="5dp"
                                android:gravity="center"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="10dp">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center">
                            <Button
                                android:layout_width="@dimen/main_cicle"
                                android:layout_height="@dimen/main_cicle"
                                android:background="@drawable/piont_two"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="正常审批"
                                android:textColor="#8CCFF5"
                                android:textSize="@dimen/main_tip"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="@dimen/main_tip"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:gravity="center">
                            <Button
                                android:layout_width="@dimen/main_cicle"
                                android:layout_height="@dimen/main_cicle"
                                android:background="@drawable/piont_one"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="超时审批"
                                android:textColor="#8CCFF5"
                                android:textSize="@dimen/main_tip"
                                android:padding="5dp"
                                android:layout_marginLeft="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2"
                                android:textSize="@dimen/main_tip"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_weight="16"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:id="@+id/main_my_message"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_button_shape4"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/my_message" />
                            <TextView
                                android:gravity="center"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="消息"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/main_title" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/main_search"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/main_button_shape5"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <android.support.v7.widget.AppCompatImageView
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/search" />
                            <TextView
                                android:gravity="center"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="查询"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/main_title"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="bottom">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湖南雨人网络安全技术股份有限公司"
                android:textColor="#1A5398"
                android:textSize="20dp" />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>

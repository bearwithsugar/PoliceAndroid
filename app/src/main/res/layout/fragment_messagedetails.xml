<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="提交时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_message"/>

            <TextView
                android:id="@+id/approve_create_time"
                android:text="2018.3.8 10:25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_message"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="流程状态："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_message"/>

            <TextView
                android:textColor="#215cb9"
                android:id="@+id/approve_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待审批"
                android:textSize="@dimen/list_message"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="流程编号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_message"/>

            <TextView
                android:id="@+id/approve_module_id"
                android:text="20180308112511"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_message"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="流程类型："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_message"/>

            <TextView
                android:id="@+id/approve_operate_desc"
                android:text="协查"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_message"/>

        </LinearLayout>

        <TextView
            android:text="审批历史："
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_message"/>

        <TableLayout
            android:layout_marginTop="5dp"
            android:id="@+id/approve_history_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TableLayout>
    </LinearLayout>




</LinearLayout>
